<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".red">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:background="#2196F3">

         <ImageView
             android:id="@+id/back_arro"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/back_arro"
             android:layout_gravity="center">

         </ImageView>


         <TextView
             android:layout_width="200dp"
             android:layout_height="match_parent"
             android:text="Profile"
             android:layout_marginLeft="30dp"
             android:gravity="center"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:textSize="25dp">

         </TextView>

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/search"
             android:layout_gravity="center">

         </ImageView>

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/dot"
             android:layout_gravity="center">

         </ImageView>


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp">
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="James Pratterson"
             android:textColor="@color/black"
             android:textSize="20dp"
             android:textStyle="bold">


         </TextView>

         <TextView
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="James Pratterson"
             android:textColor="@color/color3"
             android:textSize="18dp"
             android:textStyle="bold">
         </TextView>


         <androidx.cardview.widget.CardView
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
             app:cardCornerRadius="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

         <ImageView
             android:layout_gravity="center"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:src="@drawable/red_profile">
         </ImageView>
         </androidx.cardview.widget.CardView>

         <TextView
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="Qusique imperdiet nunc at massa dictum"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:textStyle="normal">
         </TextView>
         <TextView
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="Volutpat.Etiam id orci ipsum.Integer id ex"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:textStyle="normal">
         </TextView>
         <TextView
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="dignissim"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:textStyle="normal">
         </TextView>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_marginLeft="40dp"
             android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black">


            </TextView>

         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:orientation="vertical"
             android:layout_marginLeft="40dp"
             android:layout_height="wrap_content">
            <LinearLayout

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/red_profile">
               </ImageView>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="James Pratterson liked Marry's Photo"
                      android:textColor="@color/black">

                  </TextView>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/calendar">


                  </ImageView>

                  <TextView
                      android:layout_marginLeft="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="25 minutes ago"
                      android:textColor="@color/black">

                  </TextView>
                  </LinearLayout>
               </LinearLayout>

            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/red_profile">
               </ImageView>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="James Pratterson posted a note"
                      android:textColor="@color/black">

                  </TextView>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/calendar">


                  </ImageView>

                  <TextView
                      android:layout_marginLeft="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="30 minutes ago"
                      android:textColor="@color/black">

                  </TextView>
                  </LinearLayout>
               </LinearLayout>

            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

               <ImageView
                   android:layout_gravity="center"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/red_profile">
               </ImageView>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="James Pratterson liked Marry's photo"
                      android:textColor="@color/black">

                  </TextView>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/profile_1_photo">

                  </ImageView>

                     <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/profile_1_photo2">

                  </ImageView>

                     <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/profile_1_photo3">

                  </ImageView>

                     <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/profile_1_photo4">

                  </ImageView>


                  </LinearLayout>
               </LinearLayout>

            </LinearLayout>


         </LinearLayout>


      </LinearLayout>

   </LinearLayout>
</LinearLayout>